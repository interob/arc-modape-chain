    "version": "0.2.0",
    "configurations": [
        {
            "name": "init: download only",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chain/arc_modape_chain.py",
            "args": [
                "--config",
                "${workspaceFolder}/src/chain/Somalia.json",
                "init",
                "--download-only"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "init: download & collect",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chain/arc_modape_chain.py",
            "args": [
                "--config",
                "${workspaceFolder}/src/chain/Somalia.json",
                "init",
                "--download-and-collect-only"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "init: smooth",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chain/arc_modape_chain.py",
            "args": [
                "--config",
                "${workspaceFolder}/src/chain/Somalia.json",
                "init",
                "--smooth-only"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "init: export smoothing grid",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/modape/modape/scripts/modis_window.py",
            "args": [
                "--sgrid",
                "--target-srs", "none",
                "--region", "redo",
                "-d", "/var/storage/arc_modape_ndvi",
                "/var/storage/arc_modape_ndvi/VIM/SMOOTH"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "init: import smoothing grid",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/modape/modape/scripts/modis_smooth.py",
            "args": [
                "-d", "/var/storage/arc_modape_ndvi/VIM/SMOOTH",
                "-t", "10",
                "--sgrid", "/var/storage/arc_modape_ndvi/fullvim_sgrid.tif",
                "/var/storage/arc_modape_ndvi/VIM"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "init: export 202402d3",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chain/arc_modape_chain.py",
            "args": [
                "--config",
                "${workspaceFolder}/src/chain/Somalia.json",
                "init",
                "--export-only",
                "-b",
                "2024-02-25",
                "-e",
                "2024-02-25"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Forward processing: download next",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chain/arc_modape_chain.py",
            "args": [
                "--config",
                "${workspaceFolder}/src/chain/Somalia.json",
                "download"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Forward processing: collect downloaded",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chain/arc_modape_chain.py",
            "args": [
                "--config",
                "${workspaceFolder}/src/chain/Somalia.json",
                "collect"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Forward processing: smooth",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chain/arc_modape_chain.py",
            "args": [
                "--config",
                "${workspaceFolder}/src/chain/Somalia.json",
                "smooth"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Forward processing: export (n=6)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chain/arc_modape_chain.py",
            "args": [
                "--config",
                "${workspaceFolder}/src/chain/Somalia.json",
                "export"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "check production archive",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/chain/arc_modape_chain.py",
            "args": ["--config", "production.example.json", "check"],
            "console": "integratedTerminal"
        },
        {
            "name": "test modis_download",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/modape/modape/scripts/modis_download.py",
            "args": [
                "--download", "--multithread", "--nthreads", "4",
                "--username=africanriskcapacity", "--password=Nasa4ARC!",
                "--robust", "--target-empty", "--match-begin", "--collection", "061",
                "--tile-filter", "h16v07,h17v07,h16v06,h17v06",
                "-b", "2021-07-04", "-e", "2021-12-31", "M?D13A2"
            ],
            "cwd": "/var/storage",
            "console": "integratedTerminal"
        }
    ]
}